<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticePanther.maui.Views.UpdateClient"
             Title="UpdateClient"
             NavigatedFrom="OnLeaving"
             NavigatedTo="OnArriving">
    <VerticalStackLayout>


        <Label Text="{Binding Path=ClientToUpdateName}" HorizontalOptions="Center" FontSize="Large"/>
        
        <Label Text="Edit Name"/>
        <Entry Text="{Binding Path=ClientToUpdateName}"/>

        <Picker Title="Select Activity"/>

        <Label Text="Edit Notes"/>
        <Entry Text="Add Notes"/>

        <Picker Title="Select Project to Associate Client"/>


        <Button Text="Client Menu" WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>