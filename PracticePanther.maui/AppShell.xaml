<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PracticePanther.maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PracticePanther.maui"
    xmlns:local2="clr-namespace:PracticePanther.maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Client Menu"
        ContentTemplate="{DataTemplate local2:ClientMenu}"
        Route="Client" />
    <ShellContent
        Title="Project Menu"
        ContentTemplate="{DataTemplate local2:ProjectMenu}"
        Route="Project" />
    <ShellContent
        Title="New Client"
        ContentTemplate="{DataTemplate local2:CreatingClientView}"
        Route="NewClient" />

</Shell>
